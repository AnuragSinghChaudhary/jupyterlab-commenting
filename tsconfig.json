{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "src/*",
    "src/comments/*",
    "src/comments/components/*"
  ]
}
